    <researchViewX>6</researchViewX>
    <researchViewY>6</researchViewY>
    <prerequisites>
      <li>WanjietechHighEnergyFruit</li>
      <li>AdvancedWanjietech</li>
    </prerequisites>
  </ResearchProjectDef>


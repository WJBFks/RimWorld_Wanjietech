    <baseCost>2500</baseCost>
    <researchViewX>11</researchViewX>
    <researchViewY>6.5</researchViewY>
    <prerequisites>
      <li>WanjietechBatteries</li>
      <li>UltraWanjietech</li>
    </prerequisites>
  </ResearchProjectDef>

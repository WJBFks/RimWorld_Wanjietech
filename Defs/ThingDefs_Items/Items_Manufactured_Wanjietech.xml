<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- 高能胶囊外壳 -->
  <ThingDef ParentName="ResourceBase">
    <defName>HighEnergyCapsuleShell</defName>
    <label>high-energy capsule shell</label>
    <description>A steel capsule shell for holding the enormous energy contained in the high-energy fruit.\n\nIt can be made on the smithy or machining table.</description>
    <possessionCount>2</possessionCount>
    <graphicData>
      <texPath>Things/Item/HighEnergyCapsuleShell</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>100</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <MarketValue>16</MarketValue>
      <Mass>0.6</Mass>
      <Flammability>0.6</Flammability>
      <DeteriorationRate>2.0</DeteriorationRate>
    </statBases>
    <intricate>true</intricate>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
    <allowedArchonexusCount>10</allowedArchonexusCount>
  </ThingDef>

  <!-- 高能胶囊 -->
  <ThingDef ParentName="ResourceBase">
    <defName>HighEnergyCapsule</defName>
    <label>high-energy capsule</label>
    <description>The high-energy capsule, which is made by extracting the energy from the high-energy fruit and putting it into the capsule shell made of steel, can be used to manufacture the basic items of Wanjietech.</description>
    <possessionCount>2</possessionCount>
    <graphicData>
      <texPath>Things/Item/HighEnergyCapsule</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>50</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>70</MaxHitPoints>
      <MarketValue>40</MarketValue>
      <Mass>0.6</Mass>
      <Flammability>0.6</Flammability>
      <DeteriorationRate>2.0</DeteriorationRate>
    </statBases>
    <intricate>true</intricate>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
    <allowedArchonexusCount>10</allowedArchonexusCount>
  </ThingDef>

  <!-- 高能芯片 -->
  <ThingDef ParentName="ResourceBase">
    <defName>HighEnergyChip</defName>
    <label>high-energy chip</label>
    <description>Injecting energy from high-energy capsules into parts can be used to make advanced products of Wanjietech.\n\nIt can be made on the fabrication bench.</description>
    <possessionCount>2</possessionCount>
    <graphicData>
      <texPath>Things/Item/HighEnergyChip</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>50</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>70</MaxHitPoints>
      <MarketValue>200</MarketValue>
      <Mass>0.6</Mass>
      <Flammability>0.6</Flammability>
      <DeteriorationRate>2.0</DeteriorationRate>
    </statBases>
    <intricate>true</intricate>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
    <allowedArchonexusCount>10</allowedArchonexusCount>
  </ThingDef>

  <!-- 高能核心 -->
  <ThingDef ParentName="ResourceBase">
    <defName>HighEnergyCore</defName>
    <label>high-energy core</label>
    <description>A high-energy core made of advanced components and high-energy chips.\n\nIt can be made on the fabrication bench.</description>
    <possessionCount>2</possessionCount>
    <graphicData>
      <texPath>Things/Item/HighEnergyCore</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>50</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <MarketValue>800</MarketValue>
      <Mass>0.6</Mass>
      <Flammability>0.6</Flammability>
      <DeteriorationRate>2.0</DeteriorationRate>
    </statBases>
    <intricate>true</intricate>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
    <allowedArchonexusCount>10</allowedArchonexusCount>
